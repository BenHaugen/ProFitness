<%= form_tag '/login' do %>
  <div class="tile is-parent is-3">
    <div class='tile is-child is-medium'>
      <%= label_tag :username %>
      <%= text_field_tag :username, nil, class: "input is-focused" %>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "input is-focused" %>
      <%= submit_tag 'Login' %>
    </div>
  </div>
<% end %>