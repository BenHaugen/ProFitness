<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column"></div>
      <div class="column">
        <section class="field is-horizontal">
          <%= form_for @profile do |p| %>
            <%= p.hidden_field :user_id, value: @profile.user.id %>
            <%= content_tag(:h3, flash[:name]) if flash[:name] %>
            <div class="field">
              <div class="label">
                <%= p.label :name, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <%= p.text_field :name, class: "input is-focused #{"is-danger" if flash[:name]}" %>
                  </div>
                </div>
              </div>
              <%= content_tag(:p, flash[:name], class: "help is-danger") if flash[:name] %>
            </div>
            
            <div class="field">
              <div class="label">
                <%= p.label :height, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field has-addons">
                  <div class="control is-expanded">
                    <%= p.number_field :height, class: "input is-fullwidth is-focused #{"is-danger" if flash[:height]}" %>
                  </div>
                  <div class="control select">
                    <%= p.select :height_unit, [['Meters', true], ['Feet', false]], {}, class: "select is-focused"%>
                  </div>
                </div>
              </div>
              <%= content_tag(:p, flash[:height], class: "help is-danger") if flash[:height] %>
            </div>
            
            <div class="field">
              <div class="label">
                <%= p.label :starting_weight, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field has-addons">
                  <div class="control is-expanded">
                    <%= p.number_field :starting_weight, class: "input is-fullwidth is-focused #{"is-danger" if flash[:starting_weight]}" %>
                  </div>
                  <div class="control select">
                    <%= p.select :weight_unit, [['Kg', true], ['Lbs', false]], {}, class: "select is-focused"%>
                  </div>
                </div>
              </div>
              <%= content_tag(:p, flash[:starting_weight], class: "help is-danger") if flash[:starting_weight] %>
            </div>
            
            <div class="field">
              <div class="label">
                <%= p.label :age, class: "label" %>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control is-expanded">
                    <%= p.number_field :age, class: "input is-focused #{"is-danger" if flash[:age]}" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="label">
                <%= p.label "Select Avatar", class: "label" %>
                <%# <label class="file-label"> %>
              </div>
              <div class="field-body">
                <div class="file">
                    <%= p.file_field :avatar_image, class: "input is-focused" %>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="label">
                <%= p.label "Preferred Units:", class: "label" %>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <div class="select">
                      <%= p.select :metric, [['Metric', true], ['Merican', false]], {}, class: "select is-focused"%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="field">
              <div class="field-label">
                <!-- Left empty for spacing -->
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <%= p.submit class: "button is-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <div class="column"></div>
    </div>
  </div>
</section>