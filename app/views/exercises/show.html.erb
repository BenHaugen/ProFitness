<section class="hero is-medium is-primary is-bold" style="background-image: url('/assets/<%= @exercise.hero_image %>.jpg')">
  <div class="hero-body">
    <div class="container is-pulled-left">
      <h1 class="title">
        BRO FITNESS
      </h1>
      <h2 class="subtitle is-pulled-left">
        The Importance of Being Arnold
      </h2>
    </div>
  </div>
</section>

<%= form_tag '/exercises/search', method: 'GET' do %>
  <%= select_tag 'id', options_from_collection_for_select(Exercise.all, "id", "name") %>
  <%= submit_tag "Find Exercise" %>
<% end %>

<h1 class="title">
  <%= @exercise.name.titleize %><br>
</h1>
<%#= image_tag @exercise.hero_image, id: "banner"  %><br>
<strong>Instruction</strong><br>
<%= @exercise.instruction.capitalize %><br>
<strong>Description</strong><br>
<%= @exercise.description.capitalize %><br>
<strong>Category Type</strong><br>
<%= @exercise.category.name.capitalize %>
