<section class="hero is-medium is-primary is-bold" style="background-image: url('/assets/splash/workout.jpg')">
  <div class="hero-body">
    <div class="container is-pulled-left">
      <h1 class="title">
        BRO FITNESS
      </h1>
      <h2 class="subtitle is-pulled-left">
        The Importance of Being Arnold
      </h2>
    </div>
  </div>
</section>
<span class="columns">
  <span class="column has-text-centered">
    <%= form_tag '/exercises/search', method: 'GET' do %>
      <span class="select">
        <%= select_tag 'id', options_from_collection_for_select(Exercise.all, "id", "name")%>
      </span>
      <%= submit_tag "Find Exercise", class: "button" %>
    <% end %>
  </span>
</span>