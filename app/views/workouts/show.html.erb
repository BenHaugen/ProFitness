<section class="hero is-medium is-primary is-bold" style="background-image: url('/assets/splash/ahnold.jpg')">
  <div class="hero-body">
    <div class="container is-pulled-left">
      <h1 class="title">
        BRO FITNESS
      </h1>
      <h2 class="subtitle is-pulled-left">
        The Importance of Being Arnold
      </h2>
    </div>
  </div>
</section>
<%= @workout.show_date %><br>
<ul>
  <% @workout.workout_sets.each do |ws| %>
    <li>
      <%= content_tag :p, "#{ws.exercise.name.titleize.pluralize(ws.reps)}: #{ws.reps} reps of #{ws.weight} "%>
      <%= button_to "X", ws, method: :delete%>
    </li>
  <% end %>
</ul>
<%= form_for @workout.workout_sets.build do |set| %>
  <%= set.hidden_field :workout_id, value: @workout.id  %>
  Exercise: <%= set.collection_select :exercise_id, Exercise.all.sort_by {|ex| ex.name}, :id, :name %>
  Reps: <%= set.number_field :reps %>
  Weight: <%= set.number_field :weight %>
  <%= set.submit 'Add Set' %>
<% end %>

<%= link_to "Submit Form", user_path(@workout.user)%>
