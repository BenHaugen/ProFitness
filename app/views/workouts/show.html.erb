<%# byebug %>
<%= @workout.show_date %><br>
<ul>
  <% @workout.workout_sets.each do |ws| %>
    <li>
      <%= content_tag :p, "#{ws.exercise.name.pluralize(ws.reps)}: #{ws.reps} reps of #{ws.weight} "%>
      <%= button_to "Delete", ws, method: :delete%>
    </li>
  <% end %>
</ul>
<%= form_for @workout.workout_sets.build do |set| %>
  <%= set.hidden_field :workout_id, value: @workout.id  %>
  <%= set.collection_select :exercise_id, Exercise.all.sort_by {|ex| ex.name}, :id, :name %>
  <%= set.number_field :reps %>
  <%= set.number_field :weight %>
  <%= set.submit 'Add Set' %>
<% end %>